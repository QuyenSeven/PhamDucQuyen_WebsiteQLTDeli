
@model IEnumerable<QLyNhaHangTDeli.Models.Product>

@foreach (var p in Model)
{
    <div class="flex items-center mb-4">
        <img alt="@p.ProductName" src="@QLyNhaHangTDeli.Services.ImageHelper.GetImageUrl(p.ImageURL, Url)"
             class="w-[100px] h-[150px] mr-4 object-cover rounded" />

        <div>
            <h3 class="text-xl font-bold">
                @p.ProductName
                <span class="text-green-500 ml-2">
                    @string.Format("{0:N0}", p.Price) VNĐ
                </span>
            </h3>
            <hr class="border-t border-gray-500 my-2" />
            <a href="/Products/MenuView?productId=@(p.ProductID)"
               class="bg-green-500 text-white font-bold py-2 px-4 rounded-full hover:bg-green-600 inline-block">
                Đặt ngay
            </a>
        </div>
    </div>
}

