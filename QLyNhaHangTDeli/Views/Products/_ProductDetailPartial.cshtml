@model QLyNhaHangTDeli.Models.Product

<div class="space-y-4 text-center flex flex-col h-auto">
    <h2 class="text-2xl font-bold">@Model.ProductName</h2>
    @{
        var imgUrl = QLyNhaHangTDeli.Services.ImageHelper.GetImageUrl(Model.ImageURL, Url);
    }
    <img src="@imgUrl" class="w-64 h-64 rounded mx-auto" />
    <p class="text-gray-600">Giá: <span class="text-red-500 font-semibold">@Model.Price.ToString("N0")₫</span></p>
    <p class="text-sm text-gray-700">@Model.ProductDes</p>

    <!-- Nút thêm vào giỏ hàng -->
    <div class="mt-auto pt-4">
        <button class="bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded shadow add-to-cart-btn" data-id="@Model.ProductID">
            <i class="fas fa-cart-plus mr-2"></i> Thêm vào giỏ hàng
        </button>
    </div>
</div>
